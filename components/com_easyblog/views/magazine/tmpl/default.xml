<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_EASYBLOG_MAGAZINE_MENU_LAYOUT">
		<message>
			<![CDATA[COM_EASYBLOG_MAGAZINE_MENU_LAYOUT_DESC]]>
		</message>
		<view>magazine</view>
	</layout>
	<state>
		<name><![CDATA[COM_EASYBLOG_MAGAZINE_MENU_LAYOUT]]></name>
		<description><![CDATA[COM_EASYBLOG_MAGAZINE_MENU_LAYOUT_DESC]]></description>
	</state>

	<fields name="params">

		<fieldset name="request" label="COM_EASYBLOG_MAGAZINE_MENU" addfieldpath="/administrator/components/com_easyblog/elements">
			<field name="magazine_style" type="themefiles" default="layout_1" folder="blogs/magazine" label="COM_EASYBLOG_MAGAZINE_STYLE" description="COM_EASYBLOG_MAGAZINE_STYLE_DESC" />
		</fieldset>

		<fieldset name="leading_article_options" label="COM_EASYBLOG_MAGAZINE_MENU_LEADING_ARTICLE" addfieldpath="/administrator/components/com_easyblog/elements">
			<field name="magazine_leading_article_type" type="list" default="1" class="btn-group" label="COM_EASYBLOG_MAGAZINE_LEADING_ARTICLE_TYPE" description="COM_EASYBLOG_MAGAZINE_LEADING_ARTICLE_TYPE_DESC">
				<option value="latestPost">COM_EASYBLOG_MAGAZINE_LATEST_POST</option>
				<option value="latestFeatured">COM_EASYBLOG_MAGAZINE_LATEST_FEATURED</option>
				<option value="singlePost">COM_EASYBLOG_MAGAZINE_SINGLE_POST</option>
			</field>

			<field name="magazine_leading_article" type="post" default="" label="COM_EASYBLOG_MAGAZINE_LEADING_ARTICLE" description="COM_EASYBLOG_MAGAZINE_LEADING_ARTICLE_DESC" />

			<field name="magazine_leading_article_category" type="multicategories" default="" label="COM_EASYBLOG_MAGAZINE_LEADING_ARTICLE_CATEGORIES" description="COM_EASYBLOG_MAGAZINE_LEADING_ARTICLE_CATEGORIES_DESC" />

			<field name="magazine_leading_article_readmore" type="radio" default="1" class="btn-group" label="COM_EB_SHOW_READMORE" description="COM_EB_SHOW_READMORE_DESC">
				<option value="0">COM_EASYBLOG_NO</option>
				<option value="1">COM_EASYBLOG_YES</option>
			</field>
		</fieldset>

		<fieldset name="list_article_options" label="COM_EASYBLOG_MAGAZINE_MENU_LIST_ARTICLE" addfieldpath="/administrator/components/com_easyblog/elements">

			<field name="magazine_hide_cover" type="radio" default="0" class="btn-group" label="COM_EASYBLOG_MAGAZINE_HIDE_COVER" description="COM_EASYBLOG_MAGAZINE_HIDE_COVER_DESC">
				<option value="0">COM_EASYBLOG_NO</option>
				<option value="1">COM_EASYBLOG_YES</option>
			</field>

			<field name="magazine_exclude_featured" type="radio" default="0" class="btn-group" label="COM_EASYBLOG_MAGAZINE_EXCLUDE_FEATURED_POSTS" description="COM_EASYBLOG_MAGAZINE_EXCLUDE_FEATURED_POSTS_DESC">
				<option value="0">COM_EASYBLOG_NO</option>
				<option value="1">COM_EASYBLOG_YES</option>
			</field>

			<field name="magazine_inclusion_authors" type="multiauthors" default="" label="COM_EASYBLOG_MAGAZINE_INCLUDE_ONLY_AUTHORS" description="COM_EASYBLOG_MAGAZINE_INCLUDE_ONLY_AUTHORS_HELP" />
			<field name="magazine_exclusion_authors" type="multiauthors" default="" label="COM_EASYBLOG_MAGAZINE_EXCLUDE_ONLY_AUTHORS" description="COM_EASYBLOG_MAGAZINE_EXCLUDE_ONLY_AUTHORS_HELP" />
			<field name="magazine_list_article_category" type="multicategories" default="" label="COM_EASYBLOG_MAGAZINE_LIST_ARTICLE_CATEGORIES" description="COM_EASYBLOG_MAGAZINE_LIST_ARTICLE_CATEGORIES_DESC" />

			<field name="listLimit" type="text" default="9" label="COM_EASYBLOG_MAGAZINE_LIST_LIMIT" description="COM_EASYBLOG_MAGAZINE_LIST_LIMIT_DESC" />

			<field name="list_article_readmore" type="radio" default="1" class="btn-group" label="COM_EB_SHOW_READMORE" description="COM_EB_SHOW_READMORE_DESC">
				<option value="0">COM_EASYBLOG_NO</option>
				<option value="1">COM_EASYBLOG_YES</option>
			</field>

		</fieldset>
	</fields>
</metadata>
